<?xml version="1.0" encoding="utf-8" ?> 
<component name="MainScene" extends="Scene">
    <script type="text/brightscript" uri="MainScene.brs"/>

    <children>
        <ZoomRowList id="zoomRowList"/>
        <VideoPlayer id="videoPlayer" scale="[0.3,0.3]"/>
        <Animation id="fullScreenVideoAnimation"
			duration="0.5"
			repeat="false"
			easeFunction="linear" >
			<Vector2DFieldInterpolator 
                key="[0.0, 1.0]"
				keyValue="[ [0.3, 0.3], [1.0, 1.0] ]"
			    fieldToInterp="videoPlayer.scale" />
            <Vector2DFieldInterpolator 
                id="translationVideoFullScreen"
                key="[0.0, 1.0]"
			    fieldToInterp="videoPlayer.translation" />
		</Animation>

        <Animation id="minimizeVideoAnimation"
			duration="0.5"
			repeat="false"
			easeFunction="linear" >
			<Vector2DFieldInterpolator 
                key="[0.0, 1.0]"
				keyValue="[ [1.0, 1.0], [0.3, 0.3] ]"
			    fieldToInterp="videoPlayer.scale" />
            <Vector2DFieldInterpolator 
                id="translationVideoMinimize"
                key="[0.0, 1.0]"
			    fieldToInterp="videoPlayer.translation" />
		</Animation>
    </children>
</component>
